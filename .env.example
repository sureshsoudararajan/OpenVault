# ========================================
# OpenVault Environment Configuration
# ========================================

# Application
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database (PostgreSQL)
DATABASE_URL=postgresql://openvault:openvault_secret@localhost:5432/openvault?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-Compatible Object Storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=openvault_minio
MINIO_SECRET_KEY=openvault_minio_secret
MINIO_BUCKET=openvault-files
MINIO_USE_SSL=false

# MeiliSearch
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=openvault_meili_master_key

# JWT Secrets
JWT_ACCESS_SECRET=change-me-access-secret-min-32-chars!!
JWT_REFRESH_SECRET=change-me-refresh-secret-min-32-chars!!
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OAuth2 - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# OAuth2 - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# Encryption
ENCRYPTION_SERVER_KEY=change-me-server-encryption-key-32ch

# File Upload Limits
MAX_FILE_SIZE=5368709120
MAX_CHUNK_SIZE=10485760
DEFAULT_STORAGE_QUOTA=5368709120
